<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-3 vertical-center">
      <div class="thumbnail">
        <img src="{{product.picture}}" alt="{{product.product_name}}">
        <div class="caption">
          <h2>{{product.product_name}}</h2>
          <p class="price">${{product.price}}</p>        
            <a href="/products" class="back-to-products btn btn-default" role="button">Back to all products</a>           
        </div>
      </div>
    </div>
  </div>
</div>